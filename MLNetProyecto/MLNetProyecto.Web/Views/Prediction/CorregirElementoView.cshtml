@{
    ViewBag.Title = "Corregir Elemento";
}

<h2>Corregir Elemento</h2>

<div>
    <h3>Imagen a Corregir</h3>
    <img src="data:image/jpeg;base64,@ViewBag.ImagePath" alt="Imagen a Corregir" />
</div>

<form method="post" asp-action="CorregirElemento">
    <input type="hidden" name="FileName" value="@ViewBag.FileName" />
    <input type="hidden" name="ImagePath" value="@ViewBag.ImagePath" />
    <div class="form-group">
        <label for="Label">Label: </label>
        <select class="form-control" id="Label" name="Label">
            <option value="metal">Metal</option>
            <option value="papel">Papel</option>
            <option value="vidrio">Vidrio</option>
            <option value="plastico">Plastico</option>
            <option value="organico">Organico</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>